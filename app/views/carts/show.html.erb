<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Your Cart</h1>

  <% if @cart_items.any? %>
    <div class="divide-y divide-gray-200">
      <% @cart_items.each do |cart_item| %>
        <div class="py-6 flex items-center justify-between">
          <div>
            <h2 class="text-lg font-medium text-gray-900"><%= cart_item.product.name %></h2>
            <p class="text-gray-600"><%= number_to_currency(cart_item.product.price) %></p>
            <p class="text-gray-500">Quantity: <%= cart_item.quantity %></p>
          </div>
          
          <%= button_to cart_item_path(cart_item), 
              method: :delete,
              class: "text-sm font-medium text-red-600 hover:text-red-800" do %>
            Remove
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-8 border-t border-gray-200 pt-6">
      <p class="text-xl font-bold text-gray-900">
        Total: <%= number_to_currency(@cart.total_price) %>
      </p>
    </div>
  <% else %>
    <p class="text-gray-600">Your cart is empty.</p>
  <% end %>
</div>