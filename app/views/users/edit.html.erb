<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Edit User</h1>

  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mb-4">
      <%= form.label :role, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :role, User.roles.keys, {}, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.submit 'Update User', class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>
  <% end %>
</div>