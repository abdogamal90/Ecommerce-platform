<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Your Orders</h1>

  <% if @orders.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-100">
          <tr>
            <th class=" px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @orders.each do |order| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4 text-sm text-gray-900"><%= order.id %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= order.created_at.strftime("%b %d, %Y %I:%M %p") %></td>
              <td class="px-6 py-4 text-sm text-gray-900"><%= number_to_currency(order.total_price) %></td>
              <td class="px-6 py-4 text-sm">
                <span class="px-2 py-1 text-xs font-semibold rounded-full 
                             <%= order.pending? ? 'bg-yellow-100 text-yellow-800' : 
                                order.completed? ? 'bg-green-100 text-green-800' : 
                                'bg-red-100 text-red-800' %>">
                  <%= order.status.capitalize %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900">
                <%= link_to "View", order_path(order), class: "text-blue-600 hover:text-blue-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <% if @pagy %>
      <div class="mt-6">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <p class="mt-4 text-gray-600">You have no orders yet.</p>
    </div>
  <% end %>
</div>