<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Order Confirmation</h1>

  <p class="mb-4">Thank you for your order! Here are the details:</p>

  <div class="space-y-4">
    <% @order.order_items.each do |order_item| %>
      <div class="flex items-center justify-between border-b pb-4">
        <div>
          <h2 class="text-lg font-semibold"><%= order_item.product.name %></h2>
          <p class="text-gray-600"><%= number_to_currency(order_item.price) %></p>
          <p class="text-gray-500">Quantity: <%= order_item.quantity %></p>
        </div>
        <p class="text-gray-700">
          <%= number_to_currency(order_item.price * order_item.quantity) %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="mt-6">
    <p class="text-xl font-bold">
      Total: <%= number_to_currency(@order.total_price) %>
    </p>
  </div>
</div>