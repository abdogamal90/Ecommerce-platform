<turbo-frame id="flash-container">
  <% if flash.any? %>
    <% flash.each do |type, message| %>
      <% flash_class = case type.to_sym
          when :notice then "bg-green-100 border-green-400 text-green-700"
          when :alert then "bg-red-100 border-red-400 text-red-700"
          when :error then "bg-red-100 border-red-400 text-red-700"
          when :warning then "bg-yellow-100 border-yellow-400 text-yellow-700"
          else "bg-blue-100 border-blue-400 text-blue-700"
        end
      %>

      <div class="flash-message p-4 mb-4 border-l-4 rounded-lg shadow-md <%= flash_class %>">
        <p class="font-medium"><%= message %></p>
      </div>
    <% end %>
  <% end %>
</turbo-frame>