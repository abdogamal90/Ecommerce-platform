<h1 class="mb-4"><%= @user.name %>'s Profile</h1>
<%= link_to 'Edit Profile', edit_user_registration_path, class: "btn btn-primary mb-3" %>
<div class="mb-5">
  <h2 class="h4 mb-3">Profile Information</h2>
  <div class="card p-4">
    <p><strong>Name:</strong> <%= @user.name %></p>
    <p><strong>Email:</strong> <%= @user.email %></p>
    <% if @user.admin? %>
      <p class="text-success"><strong>Role:</strong> Admin</p>
    <% else %>
      <p class="text-secondary"><strong>Role:</strong> User</p>
    <% end %>
  </div>
</div>

<div class="mb-5">
  <h2 class="h4 mb-3">Wishlist</h2>
  <ul class="list-group mb-4">
    <% @wishlist_items.each do |item| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= item.product.name %>
        <%= link_to 'View', product_path(item.product), class: "btn btn-sm btn-outline-primary" %>
      </li>
    <% end %>
    <% if @wishlist_items.empty? %>
      <li class="list-group-item text-muted">No items in wishlist.</li>
    <% end %>
  </ul>
</div>
<div class="mb-5">
  <h2 class="h4 mb-3">Products</h2>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= number_to_currency(product.price) %></td>
            <td>
              <%= link_to 'View', product_path(product), class: "btn btn-sm btn-outline-primary" %>
            </td>
          </tr>
        <% end %>
        <% if @products.empty? %>
          <tr>
            <td colspan="4" class="text-muted">No products found.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

