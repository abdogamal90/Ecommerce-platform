<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 mb-8">Products</h1>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @products.each do |product| %>
      <div class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <!-- Assuming you have an image, if not, remove this section -->
        
        
        <div class="p-6">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">
            <%= link_to product.name, product_path(product), 
                class: "hover:text-indigo-600 transition-colors duration-200" %>
          </h2>
          
          <p class="text-gray-600 text-base mb-4 line-clamp-2 h-12">
            <%= product.description %>
          </p>
          
          <div class="flex items-center justify-between">
            <p class="text-2xl font-bold text-indigo-600">
              $<%= number_with_precision(product.price, precision: 2) %>
            </p>
            
            <%= link_to "Add to Cart", cart_path(product_id: product.id), 
                class: "px-4 py-2 bg-indigo-600 text-white font-semibold rounded-lg shadow-md hover:bg-indigo-500 transition-colors duration-200" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
