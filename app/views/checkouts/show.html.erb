<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Checkout</h1>

  <div class="grid grid-cols-2 gap-8">
    <!-- Cart Summary -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Order Summary</h2>
      <% @cart_items.each do |cart_item| %>
        <div class="flex items-center justify-between border-b pb-4 mb-4">
          <div>
            <h3 class="text-lg font-semibold"><%= cart_item.product.name %></h3>
            <p class="text-gray-600"><%= number_to_currency(cart_item.product.price) %></p>
            <p class="text-gray-500">Quantity: <%= cart_item.quantity %></p>
          </div>
          <p class="text-gray-700">
            <%= number_to_currency(cart_item.product.price * cart_item.quantity) %>
          </p>
        </div>
      <% end %>

      <div class="mt-6">
        <p class="text-xl font-bold">
          Total: <%= number_to_currency(@cart.total_price) %>
        </p>
      </div>
    </div>

    <!-- Payment Form -->
    <div>
      <h2 class="text-xl font-semibold mb-4">Payment Details</h2>
      <%= form_with url: checkout_path, method: :post, id: "payment-form" do |form| %>
        <div id="card-element" class="mb-4"></div>
        <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
          Pay Now
        </button>
      <% end %>
    </div>
  </div>
</div>